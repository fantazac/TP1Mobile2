<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexandre.tp1mobile2.MainActivity">

    <TextView
        android:text="@string/circleText"
        android:textColor="@color/question"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewQuestion"
        app:layout_constraintLeft_toTopOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toTopOf="parent"
        tools:layout_editor_absoluteX="104dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

    <TextView
        android:text="TextView"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textColor1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <TextView
        android:text="TextView"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textColor2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textColor1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <TextView
        android:text="TextView"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textColor3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textColor2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <TextView
        android:text="TextView"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textColor4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textColor3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="359dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="296dp"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>
